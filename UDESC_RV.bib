@article{ranasingheDigitalLollipopStudying2016,
  title = {Digital {{Lollipop}}: {{Studying Electrical Stimulation}} on the {{Human Tongue}} to {{Simulate Taste Sensations}}},
  shorttitle = {Digital {{Lollipop}}},
  author = {Ranasinghe, Nimesha and Do, Ellen Yi-Luen},
  date = {2016-10-25},
  year = {2016},
  journaltitle = {ACM Trans. Multimedia Comput. Commun. Appl.},
  volume = {13},
